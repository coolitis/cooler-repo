<addon id="repository.myrepo"
       name="My Kodi Repository"
       version="1.0.0"
       provider-name="coolitis">
    <extension point="xbmc.addon.repository"
               name="My Kodi Repo">
        <info>https://coolitis.github.io/cooler-repo/repo/addons.xml</info>
        <checksum>https://coolitis.github.io/cooler-repo/repo/addons.xml.md5</checksum>
        <datadir zip="true">https://coolitis.github.io/cooler-repo/repo/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Custom Kodi Repository with IPTV and Video Addons</summary>
        <description>Includes IPTV, YouTube, Netflix, and Free Movies addons.</description>
        <platform>all</platform>
    </extension>
</addon>
