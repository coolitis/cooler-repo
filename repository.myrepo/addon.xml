<addon id="repository.myrepo"
       name="My cooler Repo"
       version="1.0.0"
       provider-name="coolitis">

    <!-- Repository definition -->
    <extension point="xbmc.addon.repository"
               name="My cooler Repository">
        <!-- Link to your master index (addons.xml) -->
        <info compressed="false">
            repo/addons.xml
        </info>

        <!-- MD5 checksum of the addons.xml -->
        <checksum>
            repo/addons.xml.md5
        </checksum>

        <!-- Folder that contains all your addon zips -->
        <datadir zip="true">
            addons
        </datadir>
    </extension>

    <!-- Metadata (for cooler UI) -->
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">All-in-One IPTV & Streaming Addons Repository</summary>
        <description lang="en_GB">
            Includes IPTV MultiSource, DStv Now, Netflix, YouTube, PBS Live,
            Samsung TV Plus, Plex, Pluto TV, and more.
        </description>
        <disclaimer lang="en_GB">
            This repository does not host or distribute copyrighted content.
        </disclaimer>
        <language>en</language>
        <platform>all</platform>
    </extension>
</addon>
